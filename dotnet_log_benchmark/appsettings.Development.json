{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo":  [{
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "Console",
            "Args": {
              "restrictedToMinimumLevel": "Information",
//              "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
              "formatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter,Serilog.Formatting.Elasticsearch"

              //              "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{aoTraceIdLong}] <s:{SourceContext}> {Message:lj} {NewLine}{Exception}"
            }
          }
        ]
      }
    }],
    "Enrich": [ "FromLogContext", "WithExceptionDetails","WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Environment": "LocalDev"
    }
  }

}
